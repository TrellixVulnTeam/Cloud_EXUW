<div class="mt-4">
    <h3>Edit Toys</h3>
    <form method="post" action="/toys/{{Toys._id}}/update">
        <div class="form-group">
            <label for="name">name</label>
            <input type="text" class="form-control" value ="{{Toys.name}}" id ="name" name="name" >
        </div>
        <div class="form-group">
            <label for="img">img</label>
            <input type="text" class="form-control" value ="{{Toys.img}}" id ="img" name ="img" >
        </div>
        <div class="form-group">
            <label for="price">price</label>
            <input type="text" class="form-control" value ="{{Toys.price}}"  id ="price" name ="price">
        </div>
        <div class="form-group">
            <label for="type">type</label>
            <input type="text" class="form-control" value ="{{Toys.type}}" id ="type" name ="type" >
        </div>
            <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-database"></i> Submit</button>
            <a class="btn btn-info btn-sm" href="/"><i class="fa fa-list-alt"></i> View All</a>
    </form>
</div>
