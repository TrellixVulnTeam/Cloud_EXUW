<div class="mt-4">
    {{#each Toys}}
		<div class="col-sm-6 col-lg-4">
			<div class="card" >
				<a href="/toys/{{this.slug}}">
				<img class="card-img-top" src=" {{this.img}} " alt="{{this.name}}">
				</a>
				<div class="card-body">
					<a href="/toys/{{this.slug}}">
					<h5 class="card-title">{{this.name}}</h5>
					</a>
					<h5 class="card-title">{{this.price}}</h5>
					<h5 class="card-title">{{this.type}}</h5>
					<a href="#" class="btn btn-primary">Buy</a>
				</div>
			</div>
		</div>
		{{/each}}
</div>
